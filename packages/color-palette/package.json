{
  "name": "@studiotoolkit/color-palette",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Display and manage color palettes",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiotoolkit/studiotoolkit"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/ColorPalette.css",
    "./src/ColorPalette.css": "./src/ColorPalette.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc --project tsconfig.json && vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
