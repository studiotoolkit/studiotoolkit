{
  "name": "@studiotoolkit/color-wheel",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Interactive color wheel React component for creating and manipulating color harmonies with multiple harmony modes",
  "author": "StudioToolkit",
  "homepage": "https://studiotoolkit.github.io/build-color-wheel",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiotoolkit/studiotoolkit",
    "directory": "packages/color-wheel"
  },
  "bugs": {
    "url": "https://github.com/studiotoolkit/studiotoolkit/issues"
  },
  "keywords": [
    "color-wheel",
    "color-picker",
    "color-harmony",
    "harmony-polygon",
    "react-color",
    "color-selection",
    "design-tools",
    "ui-components",
    "complementary",
    "analogous",
    "triadic"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./style.css": "./dist/ColorWheel.css",
    "./src/ColorWheel.css": "./src/ColorWheel.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "npx tsc --project tsconfig.json && vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "pnpm run build && pnpm test"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0 || ^19.0.0",
    "@types/react-dom": "^18.2.0 || ^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
